<div class="bg-white rounded-lg shadow-lg p-6">
  <div class="space-y-4">
    <div>
      <h3 class="text-lg font-medium text-gray-900">Nome</h3>
      <p class="mt-1 text-gray-600"><%= book.name %></p>
    </div>

    <div>
      <h3 class="text-lg font-medium text-gray-900">Descrição</h3>
      <p class="mt-1 text-gray-600"><%= book.description %></p>
    </div>

    <div>
      <h3 class="text-lg font-medium text-gray-900">Autor</h3>
      <p class="mt-1 text-gray-600"><%= book.author %></p>
    </div>

    <div class="flex justify-between">
      <div>
        <h3 class="text-lg font-medium text-gray-900">Preço</h3>
        <p class="mt-1 text-gray-600">$<%= number_with_precision(book.price, precision: 2) %></p>
      </div>

      <div>
        <h3 class="text-lg font-medium text-gray-900">Estoque</h3>
        <p class="mt-1 text-gray-600"><%= book.stock %> units</p>
      </div>
    </div>

    <% if book.image.present? %>
      <div>
        <img src="<%= book.image %>" alt="<%= book.name %>" class="mt-2 w-full h-48 object-cover rounded-lg">
      </div>
    <% end %>
  </div>
</div>