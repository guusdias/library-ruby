<div class="max-w-7xl mx-auto">
  <h1 class="text-3xl font-bold mb-6">Livros</h1>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @books.each do |book| %>
      <div class="bg-white rounded-lg shadow-lg p-6">
        <img src="<%= book.image %>" alt="<%= book.name %>" class="w-full h-48 object-cover mb-4 rounded">
        <h2 class="text-xl font-semibold mb-2"><%= book.name %></h2>
        <p class="text-gray-600 mb-2"><%= book.author %></p>
        <p class="text-gray-500 mb-4"><%= book.description %></p>
        <div class="flex justify-between items-center">
          <span class="text-lg font-bold">$<%= book.price %></span>
          <span class="text-sm text-gray-500">Stock: <%= book.stock %></span>
        </div>
        <div class="mt-4 flex justify-end gap-2">
          <%= link_to 'Ver', book_path(book), class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
          <%= link_to 'Editar', edit_book_path(book), class: "bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600" %>
          <%= button_to 'Adicionar ao carrinho', add_to_cart_book_path(book), method: :post, class: "bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600" %>
        </div>
      </div>
    <% end %>
  </div>

  <%= link_to 'Novo livro', new_book_path, class: "mt-6 inline-block bg-green-500 text-white px-6 py-3 rounded-lg hover:bg-green-600" %>
</div>