<% if notice %>
  <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
    <%= notice %>
  </div>
<% end %>

<div class="max-w-2xl mx-auto p-6">
  <%= render @book %>

  <div class="mt-6 space-y-4">
    <div class="flex gap-4">
      <%= link_to "Editar este livro", edit_book_path(@book), 
          class: "inline-flex items-center px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-colors duration-200" %>
      
      <%= link_to "Voltar para os livros", books_path, 
          class: "inline-flex items-center px-4 py-2 bg-gray-500 text-white rounded-lg hover:bg-gray-600 transition-colors duration-200" %>
    </div>

    <%= button_to "Deletar este livro", @book, 
        method: :delete,
        class: "mt-4 w-full px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 transition-colors duration-200",
        data: { confirm: "Tem certeza que deseja deletar este livro?" } %>
  </div>
</div>